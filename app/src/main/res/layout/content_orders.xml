<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sizzl.ryanhelmlinger.sizzl.OrdersActivity"
    tools:showIn="@layout/activity_orders">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="65dp"
        android:layout_height="66dp"
        app:srcCompat="@drawable/buffalo_wild_wings_logo"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buffalo Wild Wings"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="35dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery"
        android:textAlignment="textEnd"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="309dp"
        tools:layout_editor_absoluteY="35dp" />

    <View
        android:layout_width="371dp"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="93dp" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="65dp"
        android:layout_height="66dp"
        app:srcCompat="@drawable/chipotle_logo"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="111dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chipotle"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="130dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick-up"
        android:textAlignment="textEnd"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="309dp"
        tools:layout_editor_absoluteY="130dp" />

    <View
        android:layout_width="371dp"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="188dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="128dp"
        android:layout_height="53dp"
        android:background="@drawable/button_main"
        android:text="NEW ORDER"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="382dp" />


    <Button
        android:id="@+id/buttonmenu1"
        android:layout_width="128dp"
        android:layout_height="60dp"
        android:background="@drawable/button_menu"
        android:fontFamily="roboto"
        android:text="Get Food"
        android:textAlignment="center"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="455dp" />

    <Button
        android:id="@+id/buttonmenu2"
        android:layout_width="128dp"
        android:layout_height="60dp"
        android:background="@drawable/button_menu"
        android:fontFamily="roboto"
        android:text="Orders"
        android:textAllCaps="false"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="455dp" />

    <Button
        android:id="@+id/buttonmenu3"
        android:layout_width="128dp"
        android:layout_height="60dp"
        android:background="@drawable/button_menu"
        android:fontFamily="roboto"
        android:text="Account Info"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="256dp"
        tools:layout_editor_absoluteY="455dp" />

</android.support.constraint.ConstraintLayout>
